{
  "name": "granular-captureonly",
  "version": "1.0.0",
  "description": "A macOS Electron app for capturing meeting data from Excel files and recording system audio",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "dev": "concurrently \"npm run watch\" \"electron src/main.js\"",
    "watch": "nodemon --watch src --exec \"electron src/main.js\"",
    "build": "electron-builder",
    "test": "jest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "meetings",
    "audio-recording",
    "macos",
    "excel"
  ],
  "author": "Gavin Edgley",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.2.0",
    "googleapis": "^126.0.1",
    "node-addon-api": "^7.1.0",
    "opus-recorder": "^8.0.5",
    "quill": "^2.0.3",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.gavinedgley.granular-captureonly",
    "productName": "Granular CaptureOnly",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    }
  }
}
